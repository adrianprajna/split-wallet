<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            >
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/display_picture"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:layout_toRightOf="@id/profile_image"
                android:id="@+id/home_username"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:textColor="@color/fontReverseColor"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:id="@+id/home_email"
                android:textSize="14sp"
                android:layout_toRightOf="@id/profile_image"
                android:layout_below="@id/home_username"
                android:layout_marginLeft="10dp"
                android:textColor="@color/fontReverseColor"
                android:includeFontPadding="false"/>

        </RelativeLayout>
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-100dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="#fece2f">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_marginTop="15dp"
                        >


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/dollar_logo"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:id="@+id/home_payment_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="Rp. 100.000"/>

                        <TextView
                            android:id="@+id/home_payment_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:layout_below="@id/home_payment_label"
                            android:text="Total Spent"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="#fece2f">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_marginTop="15dp">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/payment_logo"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/home_limit_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="Rp. 1.000.000"/>

                        <TextView
                            android:id="@+id/home_limit_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:layout_below="@id/home_limit_label"
                            android:text="Limit"/>
                    </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


        </LinearLayout>
    </LinearLayout>

</ScrollView>